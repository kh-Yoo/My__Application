<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/powderblue"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightcyan">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/present_address_text"
                    android:text="@string/present_address"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/present_address_button"
                    android:padding="0dp"
                    android:focusableInTouchMode="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/present_address_button"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baemin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/lightcyan">

                <TableRow
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/korean_food_button"
                        android:padding="0dp"
                        android:focusableInTouchMode="true"
                        android:layout_marginRight="30dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape"
                        android:src="@drawable/korean_food"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/snack_food_button"
                        android:padding="0dp"
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape"
                        android:src="@drawable/snack_food"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/cafe_button"
                        android:padding="0dp"
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape"
                        android:src="@drawable/cafe"/>

                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/chicken_button"
                        android:padding="0dp"
                        android:focusableInTouchMode="true"
                        android:layout_marginRight="30dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape"
                        android:src="@drawable/chicken"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/pizza_button"
                        android:padding="0dp"
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape"
                        android:src="@drawable/pizza"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/fast_food_button"
                        android:padding="0dp"
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape"
                        android:src="@drawable/fast_food"/>

                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/chinese_food_button"
                        android:padding="0dp"
                        android:focusableInTouchMode="true"
                        android:layout_marginRight="30dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape"
                        android:src="@drawable/chinese_food"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/late_night_meal_button"
                        android:padding="0dp"
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape"
                        android:src="@drawable/late_night_meal"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/lunchbox_button"
                        android:padding="0dp"
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape"
                        android:src="@drawable/lunchbox"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/lightcyan">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_bar"
                    android:id="@+id/search_text"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@null"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="10dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/search_button"
                    android:padding="0dp"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/shape"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_search_black_24dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_gravity="bottom"
        android:background="@color/powderblue"
        app:menu="@menu/menu_bottom"
        app:labelVisibilityMode="unlabeled"
        app:itemBackground="@color/lightcyan"
        app:itemIconTint="@drawable/item_color"
        app:itemTextColor="@drawable/item_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>